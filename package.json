{
  "name": "electron-cra-example",
  "productName": "Electron Create React App Example",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "electron/main.js",
  "devDependencies": {
    "cross-env": "^6.0.3",
    "electron": "^7.1.2",
    "electron-builder": "^21.2.0",
    "yarn-run-all": "^3.1.1"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.2.0"
  },
  "scripts": {
    "start": "set BROWSER=none && react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start-electron": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "build-electron": "cross-env-shell \"yarn run reset-electron && mkdir build/src && cp -r electron/. build/electron && cp -r src/shared/. build/src/shared\"",
    "reset-electron": "cross-env \"rm -rf build/src && rm -rf build/electron\"",
    "package": "electron-builder build --win -c.extraMetadata.main=build/electron/main.js --publish never"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ]
  }
}
